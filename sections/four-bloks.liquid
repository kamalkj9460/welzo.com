{% unless template contains "index" or template contains "collection" or template contains "product"  %}
    <style> @media screen and (max-width:750px){.four-block-section{display:none}}.four-block{display:flex;flex-wrap:wrap;background:#fff;box-shadow:0 4px 16px rgb(0,0,0,.11);border-radius:16px;padding:13px 14px}.four-block-item{width:100%;padding:0 0 18px;display:flex;justify-content:flex-start;align-items:center}.four-block-item:last-child{padding:0}@media screen and (min-width:750px){.four-block{padding:30px 19px 13px}.four-block-item{width:50%;padding:13px 20px;align-items:flex-start}.four-block-item:last-child{padding:13px 20px}}@media screen and (min-width:990px){.four-block-item{width:25%}}.four-block-item-icon{padding-right:11px;display:flex;justify-content:flex-start;align-items:center}.four-block-item-content h5{font-family:Poppins;font-style:normal;font-weight:500;font-size:14px;line-height:24px;letter-spacing:-.3px;color:#172b3a;margin:0}.four-block-item-text{font-family:Ubuntu,sans-serif;font-style:normal;font-weight:400;font-size:12px;line-height:23px;color:#56778f;display:none}@media screen and (min-width:750px){.four-block-item-content h5{margin:0 0 7px}.four-block-item-text{display:block}}</style>
{% endunless %} 
<link rel="stylesheet" data-href="{{ 'section-four-blocks.aio.min.css' | asset_url }}">


{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="four-block-section  section-{{ section.id }}-padding">
  <div class="page-width four-block">
    {%- for block in section.blocks -%}      
      {%- if block.settings.benefit_icon != blank and block.settings.benefit_title != blank and block.settings.benefit_text != blank -%}
        <div class="four-block-item">
          <div class="four-block-item-icon">
            {% if block.settings.benefit_icon == "icon-message" %}
              {% render 'icon-message' %}
            {% elsif block.settings.benefit_icon == "icon-truck2" %}
              {% render 'icon-truck2' %}
            {% elsif block.settings.benefit_icon == "icon-star" %}  
              {% render 'icon-star' %}
            {% else %}
              {% render 'icon-locate' %}
            {% endif %}
          </div>
          <div class="four-block-item-content">
            <h5>{{ block.settings.benefit_title }}</h5>
            <div class="four-block-item-text">{{ block.settings.benefit_text }}</div>
          </div>
        </div>
      {%- endif -%}       
    {%- endfor -%}
  </div>
</div>

{% schema %}
{
  "name": "Four blocks",
  "tag": "section",
  "class": "section",
  "settings": [    
    {
      "type": "header",
      "content": "Section settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 300,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 150
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.hero-section.blocks.heading.name",
      "limit": 4,
      "settings": [
        {
          "type": "select",
          "id": "benefit_icon",
          "options": [
            {
              "value": "icon-locate",
              "label": "Location"
            },
            {
              "value": "icon-message",
              "label": "Message"
            },
            {
              "value": "icon-truck2",
              "label": "Truck"
            },
            {
              "value": "icon-star",
              "label": "Star"
            }
          ],
          "default": "icon-star",
          "label": "Benefits block icon"
        },
        {
          "type": "text",
          "id": "benefit_title",
          "label": "Benefits block title",
          "default": "Weâ€™re rated 4.9 out of 5"
        },
        {
          "type": "textarea",
          "id": "benefit_text",
          "label": "Benefits block text",
          "default": "Based on over 24,000+ reviews on Trustindex, Trustpilot and Google."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Four blocks"
    }
  ]
}
{% endschema %}
