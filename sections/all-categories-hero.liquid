{{ 'all-categories-hero.aio.min.css' | asset_url | stylesheet_tag }}

{%- style -%}

{%- if section.settings.background_image -%}
  #All-categories-hero-{{ section.id }} {
    background-image: url({{ section.settings.background_image | img_url: 'original'}});
    background-repeat: no-repeat;
    background-size: cover;
  }
{%- endif -%}


{%- if section.settings.background_image -%}
  @media screen and (max-width: 767px) {
    #All-categories-hero-{{ section.id }} {
      background-image: url({{ section.settings.background_image_mobile | img_url: 'original'}});
    }
  }
{%- endif -%}

  #All-categories-hero-{{ section.id }} * {
    color: {{ section.settings.text_color }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

{%- endstyle -%}

<div id="All-categories-hero-{{ section.id }}">
  <div class="health-hub-hero__content page-width section-{{ section.id }}-padding isolate">
    <div class="all-categories-hero__content page-width section-{{ section.id }}-padding isolate">
      <div class="all-categories-hero__heading">
        <h1 class="hero-title all-categories-hero__title"> {{ section.settings.title }} </h1>
      </div>
  
      <div class="all-categories-hero__text">
        <span>{{ section.settings.description }}</span>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "t:sections.health-hub-hero.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Health hub",
      "label": "t:sections.all-categories-hero.settings.title.label"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "t:sections.all-categories-hero.settings.description.label"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "t:sections.health-hub-hero.settings.background_image.label"
    },
    {
      "type": "image_picker",
      "id": "background_image_mobile",
      "label": "t:sections.health-hub-hero.settings.background_image_mobile.label"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.health-hub-hero.settings.text_color.label",
      "default": "#12022F"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.health-hub-hero.name"
    }
  ]
}
{% endschema %}
