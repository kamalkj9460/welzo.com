                                                    <div class="subscription-product__content">
                                                        <div class="subscription-product__v-title">
                                                            <label for="selling_plan_{{ selling_plan.id }}">Subscribe & Save £{{ discount_price2 }}</label><br>
                                                        </div>
                                                        <div class="subscription-product__v-text">
                                                            {{ selling_plan.name }}.
                                                            You save {{ value2 }}% on auto-deliveries for this item through Subscribe and Save.
                                                        </div>
                                                    </div>
                                                </label>
                                            {% endfor %}
                                        {% endfor %}
                                    </div>
