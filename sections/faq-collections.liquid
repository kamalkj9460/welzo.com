{%- if collection.metafields.accentuate.faq_section_show -%}
  {% unless template contains "index" or template contains "collection" or template contains "product"  %}
      <style>.faq{width:100%}.faq-info{display:flex;align-items:center;justify-content:center;width:100%;padding-bottom:30px}.faq-info__button svg{width:18px;height:18px}.faq-info__button{display:flex;align-items:center;justify-content:center;width:72px;height:72px;border-radius:20%;background:#fef2f8}.faq__title{width:100%;margin:0;font-family:Quicksand;font-style:normal;font-weight:700;font-size:36px;line-height:46px;text-align:center;letter-spacing:-.8px;color:#12022f}.faq-accordion{display:flex;margin-top:5%}.faq__left-col{width:50%;padding-right:5%}.faq__right-col{width:50%;padding-left:5%}@media (max-width:768px){.faq-accordion{display:block;margin-top:5%}.faq__left-col{width:100%;padding:0}.faq__right-col{width:100%;padding:0}.faq__title{font-size:24px;line-height:34px}}</style>
  {% endunless %} 
  <link rel="stylesheet" data-href="{{ 'faq.aio.min.css' | asset_url }}">

  {%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  
    @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
      }
    }

    .section-{{ section.id }} .page-width {
      max-width: {{ section.settings.page_width }}px;
    }
  {%- endstyle -%}
  
  <div class="section-{{ section.id }} faq color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
    <div class="page-width section-{{ section.id }}-padding isolate">
      {% unless section.settings.title == blank %}
        <div class="title-wrapper-with-link title-wrapper--no-top-margin{% if section.settings.title == blank %} title-wrapper-with-link--no-heading{% endif %}">
          <div class="faq__info faq-info">
            <div class="faq-info__button">
              {% render 'icon-info' %}
            </div>
          </div>
          <div class="faq__title">{{ section.settings.title | escape }}</div>
        </div>
      {% endunless %}
      {% if collection.metafields.accentuate.question_title %}
        <div class="faq__faq-accordion faq-accordion">
          <div class="faq__left-col">
            {%- for title in collection.metafields.accentuate.question_title -%}
              {% assign mod = forloop.index | modulo: 2 %}
              {% if mod == 0 %}{% else %}
                {%- render 'accordion-item', title: title, title_tag: 'h3', text: collection.metafields.accentuate.answer_to_the_question[forloop.index0] -%}
              {% endif %}
            {% endfor %}
          </div>
          <div class="faq__right-col">
            {%- for title in collection.metafields.accentuate.question_title -%}
              {% assign mod = forloop.index | modulo: 2 %}
              {% if mod == 0 %}
                {%- render 'accordion-item', title: title, title_tag: 'h3', text: collection.metafields.accentuate.answer_to_the_question[forloop.index0] -%}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% else %}
        <div class="faq__faq-accordion faq-accordion">
          <div class="faq__left-col">
            {%- for block in section.blocks -%}
              {% assign mod = forloop.index | modulo: 2 %}
              {% if mod == 0 %}{% else %}
                {%- render 'accordion-item', title: block.settings.title, title_tag: 'h3', text: block.settings.text -%}
              {% endif %}
            {% endfor %}
          </div>
          <div class="faq__right-col">
            {%- for block in section.blocks -%}
              {% assign mod = forloop.index | modulo: 2 %}
              {% if mod == 0 %}
                {%- render 'accordion-item', title: block.settings.title, title_tag: 'h3', text: block.settings.text -%}
              {% endif %}
            {% endfor %}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}

{% schema %}
{
  "name": "t:sections.faq.name2",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Frequently Asked Questions",
      "label": "Title"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "page_width",
      "min": 1000,
      "max": 1600,
      "step": 10,
      "default": 1330,
      "unit": "px",
      "label": "t:settings_schema.layout.settings.page_width.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "t:sections.faq.presets.name2"
    }
  ]
}
{% endschema %}
